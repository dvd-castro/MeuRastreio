<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MeuRastreio" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/white</item>

        <item name="colorAccent">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/primary_dark_gray_background</item>

        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/gray_background</item>
        <item name="android:textColor">@color/black</item>

        <item name="bottomSheetDialogTheme">@style/Theme.MeuRastreio.BottomSheetDialog</item>
        <item name="materialCardViewStyle">@style/Theme.MeuRastreio.MaterialCardView.Light</item>
    </style>
</resources>