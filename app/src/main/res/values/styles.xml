<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.MeuRastreio.BottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <style name="Theme.MeuRastreio.MaterialCardView.Dark" parent="Widget.MaterialComponents.CardView">
        <item name="materialThemeOverlay">@style/CustomCardViewDark</item>
    </style>

    <style name="Theme.MeuRastreio.MaterialCardView.Light" parent="Widget.MaterialComponents.CardView">
        <item name="materialThemeOverlay">@style/CustomCardViewLight</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/radius_24</item>
        <item name="cornerSizeTopLeft">@dimen/radius_24</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="CustomCardViewDark" parent="">
        <item name="colorPrimary">@color/white</item>
        <item name="colorSurface">@color/secondary_dark_gray_background</item>
    </style>

    <style name="CustomCardViewLight" parent="">
        <item name="colorPrimary">@color/black</item>
        <item name="colorSurface">@color/white</item>
    </style>
</resources>