<resources>
    <!-- Base application theme. -->
    <style name="Theme.MeuRastreio" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/white</item>

        <item name="colorAccent">@color/black</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/light_gray</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/primary_dark_gray_background</item>

        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/gray_background</item>
        <item name="android:textColor">@color/black</item>

        <item name="bottomSheetDialogTheme">@style/Theme.MeuRastreio.BottomSheetDialog</item>
        <item name="cardViewStyle">@style/Theme.MeuRastreio.CardView.Light</item>
    </style>

    <style name="Theme.MySplash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/black</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.MeuRastreio</item>
    </style>
</resources>